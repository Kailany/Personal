<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDetalheDenuncia">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/detalhe_denuncia_desordem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/detalhe_denuncia_descricao"
        app:layout_constraintTop_toBottomOf="@id/detalhe_denuncia_desordem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/detalhe_denuncia_status"
        app:layout_constraintTop_toBottomOf="@id/detalhe_denuncia_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/detalhe_denuncia_confiabilidade"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detalhe_denuncia_status"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/detalhe_denuncia_imagem"
        app:layout_constraintTop_toBottomOf="@id/detalhe_denuncia_confiabilidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/detalhe_denuncia_usuario"
        app:layout_constraintTop_toBottomOf="@id/detalhe_denuncia_imagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/detalhe_denuncia_local"
        app:layout_constraintTop_toBottomOf="@id/detalhe_denuncia_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>